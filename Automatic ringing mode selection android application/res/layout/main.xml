<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="vertical">
			<Button android:id="@+id/button1" android:text="Add Current Location"
				android:background="#9400D3" android:textColor="#FFFAF0"
				android:textStyle="bold" android:typeface="normal"
				android:layout_marginBottom="2dip" android:layout_width="fill_parent"
				android:layout_height="35dp" android:textSize="15sp" />
			<Button android:typeface="normal" android:layout_width="fill_parent"
				android:layout_marginBottom="2dip" android:background="#2E64FE"
				android:textColor="#FFFAF0" android:text="Erase Previous Location"
				android:id="@+id/button3" android:textStyle="bold"
				android:layout_height="35dp" android:textSize="15sp" />
			<Button android:typeface="normal" android:layout_width="fill_parent"
				android:layout_marginBottom="2dip" android:id="@+id/button4"
				android:textStyle="bold" android:layout_height="35dp"
				android:textSize="15sp" android:text="Start Application Service" android:background="#008080" android:textColor="#FFFAF0"/>
			<Button android:id="@+id/button2" android:textStyle="bold"
				android:layout_marginBottom="2dip" android:layout_height="35dp" android:layout_width="fill_parent"
				android:textSize="15sp" android:text="Stop Application Service" android:background="#FF0000" android:textColor="#FFFAF0"/>
			<ImageView android:layout_height="wrap_content" android:id="@+id/imageView1"
				android:layout_width="wrap_content" android:layout_gravity="center" />

			<ImageView android:layout_width="wrap_content" android:id="@+id/imageView2"
				android:layout_height="wrap_content" android:src="@drawable/kuetdroid" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>
